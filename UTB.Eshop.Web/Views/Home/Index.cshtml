@model List<CarouselItem>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@{

    if (Model != null && Model.Count > 0)
    { 
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @{
                string classActive = "class=active";
                for (int i = 0; i < Model.Count; ++i)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" @classActive></li>
                    classActive = "";
                }
            }
        </ol>
        <div class="carousel-inner">

            @{
                classActive = "active";
                for (int i = 0; i < Model.Count; ++i)
                {
                    <div class="carousel-item @classActive">
                        <img class="d-block w-100" src="@Model[i].ImageSrc" alt="@Model[i].ImageAlt">
                    </div>
                    classActive = "";
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
                }
}